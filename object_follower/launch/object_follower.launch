<launch>
  <arg name="map_frame" default="map"/>
  <arg name="base_frame" default="base_link"/>
  <arg name="object_frame" default="object"/>

  <arg name="range_diff_to_set_new_pose" default="0.15"/>
  <arg name="angle_diff_to_set_new_pose" default="10"/>
  <arg name="goal_dist_from_obj" default="0.5"/>

  <arg name="generator_type" default="nearest_2d"/>
  <arg name="publisher_type" default="tf"/>
  <arg name="cheker_type" default="default"/>

  <node pkg="object_follower" type="object_follower_tf_node" name="object_follower" output="screen">
    <param name="map_frame" value="$(arg map_frame)"/>
    <param name="base_frame" value="$(arg base_frame)"/>
    <param name="object_frame" value="$(arg object_frame)"/>

    <param name="range_diff_to_set_new_pose" value="$(arg range_diff_to_set_new_pose)"/>
    <param name="angle_diff_to_set_new_pose" value="$(arg angle_diff_to_set_new_pose)"/>
    <param name="goal_dist_from_obj" value="$(arg goal_dist_from_obj)"/>

    <param name="generator_type" value="$(arg generator_type)"/>
    <param name="publisher_type" value="$(arg publisher_type)"/>
    <param name="cheker_type" value="$(arg cheker_type)"/>
  </node>
</launch>
